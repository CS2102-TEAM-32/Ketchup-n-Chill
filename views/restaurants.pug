extends layout

block style
  style(type="text/css").
    table {
      margin: auto;
      width: 75%;
    }
    table thead {
      background-color: #e22512;
      color: #ffffff;
      text-align: left;
      font-weight: bold;
    }
    table td {
      padding: 2px;
    }
    table th {
      padding: 10px;
      font-size: 18px;
    }
    table tbody tr {
      border-bottom: 1px solid #dddddd;
    }
    table tbody tr:nth-of-type(even) {
      background-color: whitesmoke;
    }
    table tbody tr:last-of-type {
      border-bottom: 2px solid #980403;
    }
    table td {
      text-align:center;
      font-size: 15px;
      text-align: left;
      padding-left: 10px;
    }
    table td:hover {
      transform: scale(1.06);
      background: #ffb5b7;

    }
    clearfix:after {
      content: "";
      clear: both;
      display: table;
    }


block append content
  .container
    h1(style='text-align:center; padding-top:20px; font-size:35px;') All Restaurants
    br
    div
      table
        thead
          tr
            th Restaurant Names
            th Cuisine

        tbody
          each restaurant in restaurants
            tr
              td
                a(href="/restaurants/" + restaurant.rname + '/' + encodeURIComponent(restaurant.raddress))= restaurant.rname
              td
                p #{restaurant.cuisine}
                