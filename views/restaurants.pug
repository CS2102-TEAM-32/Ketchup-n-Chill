extends layout

block style
    style(type="text/css").
        content-table {
            margin: 25px 0;
            float:top;
            position:relative;
            left:400px;
            width:100%;
            font-size: 3em;
            border-radius: 10px 10px 0 0;
            overflow: hidden;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
        }
        content-table center{
            margin-left:auto;
            margin-right:auto;
        }
        content-table thead {
            background-color: #e22512;
            color: #ffffff;
            text-align: center;
            font-weight: bold;
        }
        content-table th
        content-table td {
            padding: 12px 15px;
        }
        content-table tbody tr {
            border-bottom: 1px solid #dddddd;
        }
        content-table tbody tr:nth-of-type(even) {
            background-color: #f3f3f3;
        }
        content-table tbody tr:last-of-type {
            border-bottom: 2px solid #980403;
        }
        content-table td {
            text-align:center;

        }
        content-table td:hover {
            transform: scale(1.06);
            background: #ffb5b7;

        }
        link {
            color: inherit;
            text-decoration:none;
        }
        clearfix:after {
            content: "";
            clear: both;
            display: table;
        }


block content
    h1(style='text-align:center; padding-top:20px') All Restaurants
    div
        <clearfix>
            <content-table>
            table
                thead
                    tr
                        th Restaurant Names

                tbody
                    each restaurant in restaurants
                        tr
                            td
                                <link>
                                    a(href="/restaurants/" + restaurant.rname)= restaurant.rname
                                </link>

            </content-table>
        </clearfix>


