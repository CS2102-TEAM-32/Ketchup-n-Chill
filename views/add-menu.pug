extends layout

block style
  style(type="text/css").
    form {
      background-color: whitesmoke;
      width: 80%;
      margin:20px auto;

      padding: 20px 20px;
      -webkit-box-shadow: 0px 5px 20px -5px rgba(0, 0, 0, 0.3);
      box-shadow: 0px 5px 20px -5px rgba(0, 0, 0, 0.3);
      border-radius: 5px;
    }
    form .form-group {
      position: relative;
      margin-bottom: 30px;
    }
    form .form-control {
      background-color: #ebecee;
      border-radius: 4px;
      border: none;
      height: 40px;
      -webkit-box-shadow: none;
      box-shadow: none;
      color: #3e485c;
      font-size: 14px;
    }
    form .form-control::-webkit-input-placeholder {
      color: rgba(62, 72, 92, 0.3);
    }
    form .form-control:-ms-input-placeholder {
      color: rgba(62, 72, 92, 0.3);
    }
    form .form-control::placeholder {
      color: rgba(62, 72, 92, 0.3);
    }
    form input[type="date"].form-control:invalid {
      color: rgba(62, 72, 92, 0.3);
    }
    form select.form-control {
      -webkit-appearance: none;
      -moz-appearance: none;
      appearance: none;
    }
    form select.form-control + .select-arrow {
      position: absolute;
      right: 0px;
      bottom: 4px;
      width: 32px;
      line-height: 32px;
      height: 32px;
      text-align: center;
      pointer-events: none;
      color: rgba(62, 72, 92, 0.3);
      font-size: 14px;
    }
    form select.form-control + .select-arrow:after {
      content: '\279C';
      display: block;
      -webkit-transform: rotate(90deg);
      transform: rotate(90deg);
    }
    form .form-label {
      display: inline-block;
      color: #3e485c;
      font-weight: 700;
      margin-bottom: 6px;
      margin-left: 7px;
    }

block append content
  h1(style='text-align:center;') #{rname}
  h4(style='text-align:center;') #{raddress}
  br
  h5(style='text-align:center; padding:0px;margin:0px;') Add Item
  .restplate
    form(method='POST' action='/menus/' + rname + '/' + encodeURIComponent(raddress))
      .information
        .form-group(style='text-align:center; width:100%;')
          label(style='padding-bottom:0;margin-bottom:0;') Menu
          p(style='font-size:13px;padding:0;margin:0;') Select the menu to add an item to, or create a menu using a unique menu name.
          input.form-control(type=text name='title' list='menu-names' placeholder='menu title')
          datalist(id='menu-names')
            each menu in menus
              option #{menu.title}
        br
        ul#fieldList(style='text-align:center;')
          li
            input.form-control(type=text name='item' placeholder='item')
            input.form-control(type=text name='price' placeholder='price')
        br
  div(style='text-align:center; margin-top:10px;')
    button.btn.btn-primary#addMore(style='margin-right:10px;') Add another item
    button.btn.btn-success(type='submit' value='Submit') Submit

