extends layout

block append content
  h1 Add menu to #{rname} at #{raddress}
  .restplate
    form(method='POST' action='/menus/' + rname + '/' + encodeURIComponent(raddress))
      .information
        .form-group
          label Menu name:
          input(type=text name='title' list='menu-names')
          datalist(id='menu-names')
            each menu in menus
              option #{menu.title}
        br
        ul#fieldList
          li
            input(type=text name='item' placeholder='item')
          li
            input(type=text name='price' placeholder='price')
      button.btn.btn-light#addMore Add another item
      button.btn.btn-light(type='submit' value='Submit') Submit

block style
  link(rel='stylesheet' href='/stylesheets/add-menu.css')