extends layout

block append content
  h1 Add your restaurant
  <restplate>
    form(method='POST' action='/restaurants')
      <information>
        img(src='/images/restaurant1.jpeg' style='width:30px; height:30px; float:left; margin: 5px 20px;')
        div.form-group
          label(for='rname') Restaurant Name:
          input#rname.form-control(type='text' name='name')
        br
        img(src='/images/address_loc.png' style='width:30px; height:30px; float:left; margin: 5px 20px;')
        div.form-group
          label(for='raddress') Address:
          input#rnaddress.form-control(type='text' name='address')
        br
        img(src='/images/cuisine.png' style='width:30px; height:30px; float:left; margin: 5px 20px;')
        div.form-group
          label(for='cuisine') Cuisine:
          input#cuisine.form-control(type='text' name='cuisine')
        br
        img(src='/images/time.png' style='width:30px; height:30px; float:left; margin: 5px 20px;')
        div.form-group
          label(for='opening_hr') Opening Hour:
          input#opening_hr.form-control(type='text' name='opening_hr')
        br
        img(src='/images/time.png' style='width:30px; height:30px; float:left; margin: 5px 20px;')
        div.form-group
          label(for='closing_hr') Closing Hour:
          input#closing_hr.form-control(type='text' name='closing_hr')
        br
        img(src='/images/telephone.png' style='width:30px; height:30px; float:left; margin: 5px 20px;')
        div.form-group
          label(for='phone_num') Contact Number:
          input#phone_num.form-control(type='text' name='phone_num')
        button.btn.btn-light(type='submit' value='Submit') Submit
      </information>
  </restplate> 

block style
  style(type="text/css").
    restplate {
      float: top;
      width: 50%;
      text-align: center;
      border-style: solid;
      border-width: 0.05px;
      border-color: #FECA1D;
      margin-top: 30px;
      margin-left:auto;
      margin-right:auto;
      display:block;
    }
    plate {
      float: top;
      width: 50%;
      text-align: center;
      border-style: solid;
      border-width: 0.05px;
      border-color: rgba(254, 255, 246, 0);
      margin-top: 30px;
      margin-left: auto;
      margin-right: auto;
      display: block;
    }
    information {
      text-align: left;
      font-size: 25px;
    }
    .btn {
      float: center;
      background-color: #FECA1D;
    }
    .wrapper {
      text-align: center;
    }
