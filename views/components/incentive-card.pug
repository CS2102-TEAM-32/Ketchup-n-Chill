mixin incentive-card(title, description, organisation, points, index)
  script.
      function confirmation() {
        var getConfirmation = document.getElementById('#{index}');
        getConfirmation.style.display = "block";
      }
      function cancel() {
        var getConfirmation = document.getElementById('#{index}');
        getConfirmation.style.display = "none";
        voucher.style.display = "none";
      }
      function viewVoucher() {
        var getConfirmation = document.getElementById('#{index}');
        getConfirmation.style.display = "none";
        voucher.style.display = "block";
      }
      var voucher = document.getElementById("voucher");

  p #{index}
  div.modal(id = index)
    div.modal-content
      div.modal-body
        p Would you like to confirm your claim?
      div.modal-footer
        a.btn.btn-primary(onclick='viewVoucher()', type='button', class="btn") Confirm
        a.btn.btn-primary(onclick='cancel()', type='button', class="btn") Cancel

  div#voucher.modal
    div.modal-content
      div.modal-body
        p Voucher has been added to your list!
      div.modal-footer
        a.btn.btn-primary(href='../diners/vouchers', type='button', class="btn") View my vouchers
        a.btn.btn-primary(onclick='cancel()', type='button', class="btn") Continue browsing

  div.card(style='background-color: whitesmoke; display: block; padding: 2px; margin-bottom: 10px; border-radius: 10px;')
    div.card-body
      div.clearfix
        img(src='../../images/testincentive.jpg' style='width:250px; height:150px; float: left; margin-right: 20px;')
        - rname = rname || 'No incentives to display at the moment'
        h5.card-title #{title}
        h6.points
          |#{points} points
        h6.card-text
          | #{description} 
        h7.organisation
          | This incentive is brought to you by <b>#{organisation}</b>
        a.btn.btn-primary(data-target = index, onclick='confirmation()', style='border-color: #FECA1D; background-color: #FECA1D; float:right;') Claim