extends layout

block style
    style(type="text/css").
        restplate {
            float: top;
            width: 50%;
            text-align: center;
            border-style: solid;
            border-width: 0.05px;
            border-color: #FECA1D;
            margin-top: 30px;
            margin-left:auto;
            margin-right:auto;
            display:block;
        }
        plate {
            float: top;
            width: 50%;
            text-align: center;
            border-style: solid;
            border-width: 0.05px;
            border-color: rgba(254, 255, 246, 0);
            margin-top: 30px;
            margin-left: auto;
            margin-right: auto;
            display: block;
        }
        information {
            text-align: left;
            font-size: 25px;

        }
        .btn {
            float: center;
            background-color: #FECA1D;
        }
        .wrapper {
            text-align: center;
        }

        .time-input::-webkit-inner-spin-button {
            display: none;
        }


block append content

    <restplate>
        - console.log(details.raddress)
        form(method='POST' action='/restaurantowners/' + details.rname + '/' + encodeURIComponent(details.raddress))
            <information>
            img(src='/images/restaurant1.jpeg' style='width:30px; height:30px; float:left; margin: 5px 20px;')
            div.form-group
                label(for='rname') Restaurant Name:
                input#rname.form-control(type='text', value=details.rname, name='name')
            br
            img(src='/images/address_loc.png' style='width:30px; height:30px; float:left; margin: 5px 20px;')
            div.form-group
                label(for='raddress') Address:
                input#rnaddress.form-control(type='text', value=details.raddress, name='address')
            br
            img(src='/images/cuisine.png' style='width:30px; height:30px; float:left; margin: 5px 20px;')
            div.form-group
                label(for='cuisine') Cuisine:
                input#cuisine.form-control(type='text', value=details.cuisine, name='cuisine')
            br
            img(src='/images/time.png' style='width:30px; height:30px; float:left; margin: 5px 20px;')
            div.form-group
                label(for='opening_hr') Opening Hour:
                input#opening_hr.time-input.form-control(type='time', value=details.opening_hr, name='opening_hr' list='limittimelist' onkeypress='return false;')
                datalist#limittimelist
                    option(value="09:00")
                    option(value="10:00")
                    option(value="11:00")
                    option(value="12:00")
                    option(value="13:00")
                    option(value="14:00")
                    option(value="15:00")
                    option(value="16:00")
                    option(value="17:00")
                    option(value="18:00")
                    option(value="19:00")
                    option(value="20:00")
                    option(value="21:00")
            br
            img(src='/images/time.png' style='width:30px; height:30px; float:left; margin: 5px 20px;')
            div.form-group
                label(for='closing_hr') Closing Hour:
                input#closing_hr.time-input.form-control(type='time', value=details.closing_hr, name='closing_hr' list='limittimelist' onkeypress='return false;')
                datalist#limittimelist
                    option(value="09:00")
                    option(value="10:00")
                    option(value="11:00")
                    option(value="12:00")
                    option(value="13:00")
                    option(value="14:00")
                    option(value="15:00")
                    option(value="16:00")
                    option(value="17:00")
                    option(value="18:00")
                    option(value="19:00")
                    option(value="20:00")
                    option(value="21:00")
            br
            img(src='/images/telephone.png' style='width:30px; height:30px; float:left; margin: 5px 20px;')
            div.form-group
                label(for='phone_num') Contact Number:
                input#phone_num.form-control(type='text', value=details.phone_num, name='phone_num')
            button.btn.btn-light(type='submit' value='Submit') Confirm changes
            </information>
    </restplate>