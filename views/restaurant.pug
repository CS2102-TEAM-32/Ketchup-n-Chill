  script.
    function confirmation() {
      var date = document.getElementById('date-input').value;
      var time = document.getElementById('time-input').value;
      var pax = document.getElementById('pax-input').value;

      document.getElementById('confirmation').style.display = "block";
      $( "div" ).data( "test", 'Booking on ' + date + ' at ' + time + ' for ' + pax + ' pax.');
      $( "span" ).text( $( "div" ).data( "test" ) );
    }
    function cancel() {
      document.getElementById('confirmation').style.display = "none";
    }
    function cancelAndRefresh() {
      document.getElementById('confirmed').style.display = "none";
      document.getElementById('rejected').style.display = "none";
      location.reload();
    }
    function returnConfirmation(event) {
      var date = document.getElementById('date-input').value;
      var time = document.getElementById('time-input').value;
      var pax = document.getElementById('pax-input').value;
      const rname = $(event.target).attr('rname');
      const raddr = $(event.target).attr('raddr');

      document.getElementById('confirmation').style.display = "none";
      $.ajax({
        url: '/restaurants/book/',
        data: {
          date: date,
          time: time,
          pax: pax,
          rname: rname,
          raddr: raddr
        },
        success: (response) => {
          // No error
          if (response == 1) {
            document.getElementById("confirmed").style.display = "block";
          }
          else if (response == 2) {
            document.getElementById("noparameters").style.display="block";
          }
          else if (response == 3) {
            document.getElementById("datepassed").style.display = "block";
          }
          else if (response == 4) {
            document.getElementById("slotbooked").style.display="block";
          }
          else if (response == 5) {
            document.getElementById("numpax").style.display = "block";
          }
          else {
            document.getElementById("rejected").style.display = "block";
          }
        },
        error: err => {
          console.log("error:" + err);
        }
      });
    }

  div#confirmation.modal
    div.modal-content
      div.modal-body
        p Would you like to confirm your booking for #{restName}?
        <span></span>
      div.modal-footer
        a.btn.btn-primary(rname=restName raddr = restAddr title=title organisation=organisation onclick='returnConfirmation(event)' type='button' class="btn") Confirm
        a.btn.btn-primary(onclick='cancel()' type='button' class="btn") Cancel

  div#confirmed.modal
    div.modal-content
      div.modal-body
        p Booking confirmed!
      div.modal-footer
        a.btn.btn-primary(href='/diners/reservations', type='button', class="btn") View my reservations
        a.btn.btn-primary(onclick='cancelAndRefresh()', type='button', class="btn") Continue browsing

  div#rejected.modal
    div.modal-content
      div.modal-body
        p Timeslot does not exist or slot is full.
        p Booking rejected.
      div.modal-footer
        a.btn.btn-primary(href='/diners/reservations', type='button', class="btn") View my reservations
        a.btn.btn-primary(onclick='cancelAndRefresh()', type='button', class="btn") Continue browsing

  div#noparameters.modal
    div.modal-content
      div.modal-body
        p Incorrect date and/or time passed in.
        p Please check. Booking rejected.
      div.modal-footer
        a.btn.btn-primary(href='/diners/reservations', type='button', class="btn") View my reservations
        a.btn.btn-primary(onclick='cancelAndRefresh()', type='button', class="btn") Continue browsing

  div#slotbooked.modal
    div.modal-content
      div.modal-body
        p Slot already booked. Please edit or delete and re-book again.
        p Booking rejected.
      div.modal-footer
        a.btn.btn-primary(href='/diners/reservations', type='button', class="btn") View my reservations
        a.btn.btn-primary(onclick='cancelAndRefresh()', type='button', class="btn") Continue browsing

  div#numpax.modal
    div.modal-content
      div.modal-body
        p Number of pax must be at least one. Please check.
        p Booking rejected.
      div.modal-footer
        a.btn.btn-primary(href='/diners/reservations', type='button', class="btn") View my reservations
        a.btn.btn-primary(onclick='cancelAndRefresh()', type='button', class="btn") Continue browsing

  div#datepassed.modal
    div.modal-content
      div.modal-body
        p  Booking date has passed.
        p  Please choose a date from today onwards. Booking rejected.
      div.modal-footer
        a.btn.btn-primary(href='/diners/reservations', type='button', class="btn") View my reservations
        a.btn.btn-primary(onclick='cancelAndRefresh()', type='button', class="btn") Continue browsing

