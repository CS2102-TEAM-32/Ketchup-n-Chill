extends layout

block style
    style(type="text/css").
        restplate {
            float: top;
            width: 50%;
            text-align: center;
            border-style: solid;
            border-width: 0.05px;
            border-color: #FECA1D;
            margin-top: 30px;
            margin-left:auto;
            margin-right:auto;
            display:block;
        }
        plate {
            float: top;
            width: 50%;
            text-align: center;
            border-style: solid;
            border-width: 0.05px;
            border-color: rgba(254, 255, 246, 0);
            margin-top: 30px;
            margin-left: auto;
            margin-right: auto;
            display: block;
        }
        information {
            text-align: left;
            font-size: 25px;

        }
        .btn {
            float: center;
        }

block content

    <restplate>
        h1(style="color:red") #{details.rname}
        img(src='../../../images/restaurant1.jpeg' style='width:500px; height:300px; float:top;')
        br
        br
        <information>
        img(src='../../../images/address_loc.png' style='width:30px; height:30px; float:left; margin: 5px 20px;')
        p <b>Address:</b>
        p #{details.raddress}
        br
        img(src='../../../images/rest_owner.png' style='width:30px; height:30px; float:left; margin: 5px 20px;')
        p <b>Restaurant Owner:</b>
        p #{details.uname}
        br
        img(src='../../../images/cuisine.png' style='width:30px; height:30px; float:left; margin: 5px 20px;')
        p <b>Cuisine:</b>
        p #{details.cuisine}
        br
        img(src='../../../images/time.png' style='width:30px; height:30px; float:left; margin: 5px 20px;')
        p <b>Opening Hours:</b>
        p #{details.opening_hr} - #{details.closing_hr}
        br
        img(src='../../../images/telephone.png' style='width:30px; height:30px; float:left; margin: 5px 20px;')
        p <b>Contact Number:</b>
        p  #{details.phone_num}
        </information>
        button.btn.btn-light(type='submit' value='Submit') Edit Timeslot // border for this. 
        button.btn.btn-light(type='submit' value='Submit') Edit Details  // border for this too.
    </restplate>