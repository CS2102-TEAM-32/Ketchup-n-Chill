extends layout

block content
  h1 Register
  form(method='POST' action='/diners/register')
    #form-group
      label Name:
      input.form-control(name='name' type='text')
    #form-group
      label uname:
      input.form-control(name='uname' type='text')
    #form-group
      label pass:
      input.form-control(name='pass' type='pass')
    #form-group
      label Confirm pass:
      input.form-control(name='pass2' type='pass')
    br
    input(type='submit' value='Submit')